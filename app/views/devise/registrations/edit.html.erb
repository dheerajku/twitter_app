<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class=" column is-4">
        <h2 class="title is-2"> Edit profile <%= resource_name.to_s.humanize %></h2>


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="field">
            <%= f.error_notification %>
          </div>
          <div class="form-inputs">
            <div class="field">
              <%= f.input :name, required: false, autofocus: true, wrapper: false,
              input_html: { autocomplete: "new-password", class: 'input' }, label_html: { class: 'label'} %>
            </div>

            <div class="field">
              <%= f.input :username, required: false, wrapper: false,
              input_html: { autocomplete: "new-password", class: 'input' }, label_html: { class: 'label'} %>
            </div>

            <div class="field">
              <%= f.input :email, required: true, wrapper: false, input_html: { class: 'input'}, label_html: { class: 'label'} %>
            </div>


            <div class="field">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>

            <div class="field">
              <%= f.input :password, hint: "leave it blank if you don't want to change it", required: false, wrapper: false, input_html: { autocomplete: "new-password", class: 'input' }, label_html: { class: 'label'} %>
            </div>

            <div class="field">
              <%= f.input :password_confirmation, required: false, wrapper: false,
              input_html: { autocomplete: "new-password", class: 'input' }, label_html: { class: 'label'} %>
            </div>
            <div class="field">
              <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, wrapper: false, input_html: { autocomplete: "current-password", class: 'input'}, label_html: { class: 'label'} %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: 'button is-info' %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'button is-info' %></p>

          <%= link_to "Back", root_path, class: 'button is-info' %>
      </div>
    </div>
  </div>
</div>